{
  "manifest_version": 3,
  "name": "PluGaMa",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "description": "A KoGaMa extension for improving and cleaning up the website and adding new features with user suggested plugins.",
  "permissions": [
    "storage",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "*://www.kogama.com/*",
    "*://friends.kogama.com/*",
    "*://kogama.com.br/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.kogama.com/*",
        "https://friends.kogama.com/*",
        "https://kogama.com.br/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "plugins/*"
      ],
      "matches": [
        "*://www.kogama.com/*",
        "*://friends.kogama.com/*",
        "*://kogama.com.br/*"
      ]
    }
  ]
}